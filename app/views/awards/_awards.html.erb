<div class="row">
  <div class="edit-profile-title">
    <h2><%= t ".awards" %></h2>
  </div>
  <% if @user.is_user? current_user %>
    <div class="edit-profile-button">
      <div class="btn-group">
        <%= link_to new_user_award_path(@user), remote: true,
          class: "btn btn-default tip btn-responsive" do %>
          <span class="icon-plus"></span>
          <%= t ".add" %>
        <% end %>
        <button type="button"
          class="btn btn-default btn-sm tip btn-responsive dropdown-toggle"
          data-toggle="dropdown" aria-expanded="true">
          <span class="icon-users"></span><span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to "#" do %>
              <span class="icon-user"> <%= t ".friends" %></span>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <span class="icon-users"> <%= t ".friends_of_friends" %></span>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <span class="icon-globe"> <%= t ".public" %></span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
<br>
<div class="info-user-height list-award">
  <%= render "awards/list_award", awards: @user.awards %>
</div>
<div class="award-modal"></div>
