<div class="modal fade" id="sync" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".sync_data" %></h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= tms_synchronize_button %>
          <span class="space"><%= t ".refresh_now" %></span>
        </div>
        <div class="form-group">
          <label class="switch" id="auto_sync">
            <input type="checkbox" id="auto_sync_checkbox" value="<%= current_user.auto_synchronize %>">
            <span class="slider round"></span>
          </label>
          <span class="space"><%= t ".want_to_sync" %></span>
        </div>
      </div>
    </div>
  </div>
</div>
