<div class="user-language" id="user-language-<%= user_language.id %>">
  <div class="row show-user-language">
    <% if !user_language.id.nil? %>
      <p>
        <%= user_language.language.name %>
        <span class="button-edit edit-language-button">
          <i class="fa fa-pencil"><%= t "edit" %></i>
        </span>
      </p>
      <p><%= user_language.level %></p>
    <% end %>
  </div>
  <div class="edit-user-language">
    <%= render "languages/update_language", user_language: user_language %>
  </div>
  <hr>
</div>
