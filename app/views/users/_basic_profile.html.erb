<% if user.info_user_quote %>
  <%= render "users/basic_profile/quote",
    user: user %>
<% end %>

<% if user.info_user %>
  <%= render "users/basic_profile/contact",
    user: user %>
<% end %>

<% if user.online_contacts.any? %>
  <%= render "users/basic_profile/social",
    user: user %>
<% end %>

<% if @users[:user_shares].present? %>
  <%= render "users/basic_profile/user_share",
    limit_user_shares: @users[:limit_user_shares],
    user_shares: @users[:user_shares] %>
<% end %>

<% if @users[:user_following].present? %>
  <%= render "users/basic_profile/user_following",
    limit_user_following: @users[:limit_user_following],
    user_following: @users[:user_following] %>
<% end %>
