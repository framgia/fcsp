<%= render "header", user: @user %>
<section id="content">
  <div class="container">
    <div class="col-md-12">
      <div class="col-sm-9">
        <div class="row clearfix">
          <div class="col-md-12">
            <div class="tabs tabs-alt clearfix" id="tabs-profile">
              <ul class="tab-nav clearfix">
                <% if @user.is_user? current_user %>
                  <li>
                    <a href="#tab-new-feed">
                      <i class="icon-rss2"></i><%= t ".new_feed" %>
                    </a>
                  </li>
                  <li>
                    <a href="#tab-suggest-job">
                      <i class="icon-lightbulb"></i><%= t ".job_suggest" %>
                    </a>
                  </li>
                <% end %>
                  <li>
                    <a href="#tab-user-info">
                      <i class="icon-pencil2"></i><%= t ".basic_infor_user" %>
                    </a>
                  </li>
                  <li>
                    <a href="#tab-user-portfolio">
                      <i class="icon-pencil2"></i><%= t ".portfolios" %>
                    </a>
                  </li>
                  <li>
                    <a href="#tab-user-clubs">
                      <i class="icon-pencil2"></i><%= t ".clubs" %>
                    </a>
                  </li>
                  <li>
                    <a href="#tab-suggest-job">
                      <i class="icon-lightbulb"></i><%= t ".job_suggest" %>
                    </a>
                  </li>
                </ul>
                <div class="tab-container">
                <% if @user.is_user? current_user %>
                  <div class="tab-content clearfix" id="tab-suggest-job">
                    <div id="job-show-wrapper">
                      <div id="job-show-body">
                        <div class="row two-column">
                          <aside class="col-md-12 column-main">
                            <div class="column-main-inner">
                              <%= render "job_accordance", job: @job_skill %>
                            </div>
                          </aside>
                          <aside class="col-md-0 column-side">
                          </aside>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
                <div class="tab-container">
                  <div class="tab-content clearfix" id="tab-new-feed">
                    <div class="table-responsive">
                    </div>
                  </div>
                </div>
                <div class="tab-container">
                  <div class="tab-content clearfix" id="tab-user-info">
                    <div class="table-responsive">
                      <%= render "basic_infor_user", user_object: @user_object %>
                    </div>
                  </div>
                </div>
                <div class="tab-container">
                  <%= render "portfolios", portfolios: @user_object.portfolios %>
                </div>
                <div class="tab-container">
                  <%= render "clubs", clubs:
                    @user_object.clubs %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <div class="col-sm-3">
        <%= render "social_network" %>
      </div>
    </div>
  </div>
</section>

<%= javascript_include_tag "users" %>
