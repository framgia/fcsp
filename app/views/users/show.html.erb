<div class="container">
  <div class="row">
    <div class="col-md-12">
      <article class="show-header-user post header-avatar-edit">
        <div class="cover-image">
          <%= load_user_cover @user, class: "img-cover" %>
        </div>
        <a class="navbar-brand avatar-user" data-toggle="modal"
          data-target="#changeAvatarModal">
          <%= load_user_avatar @user, class: "img-avatar" %>
        </a>
        <span class="site-name"><strong><%= @user.name %></strong></span>
          <span class="nav nav-tabs-profile-user">
            <%= render "information", user: @user %>
          </span>
        <div class="request-user">
          <% if !@user.is_user?(current_user) && user_signed_in? %>
            <div class="follow-user btn btn-primary message-button">
              <%= render "follow_user", user: @user %>
            </div>
          <% end %>
        </div>
      </article>
    </div>
  </div>
</div>
<section>
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <article class="post show-tab-user">
          <div class="clearfix">
            <div class="tab-content">
              <% if check_permission_profile ||
                @user.is_user?(current_user) || @user.share?(current_user) %>
                <div class="tab-pane fade in active" id="information">
                  <%= render "advance_profile",
                    advance_profiles: @advance_profiles %>
                </div>
              <% else %>
                <div class="page-err-container">
                  <%= image_tag "https://www.buyon.pk/catalog/view/theme/buyon/image/buyon/not_found.gif" %>
                  <h1><%= t ".page_error" %></h1>
                </div>
              <% end %>
            </div>
          </div>
        </article>
      </div>
      <div class="col-md-3">
        <%= render "basic_profile", user: @user, info_user: @info_user,
          users: @users %>
      </div>
    </div>
  </div>
</section>
