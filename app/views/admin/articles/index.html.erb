<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-md-5">
        <%= form_tag admin_articles_path, method: :get do %>
          <div class="input-group col-md-12">
            <%= text_field_tag :search, params[:search],
              class: "form-control input-lg" %>
            <span class="input-group-btn">
              <button class="btn btn-info btn-lg" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </span>
          </div>
        <% end %>
        <div>
          <%= render "articles/sort" %>
        </div>
        <div>
          <% if @total %>
            <h2><%= t ".found_results", total: @total %></h2>
          <% end %>
        </div>
      </div>
      <div class="col-sm-11 list-article">
        <div>
          <%= paginate @articles %>
        </div>
        <%= render partial: "articles/article", collection: @articles %>
        <div>
          <%= paginate @articles %>
        </div>
      </div>
      <div class="new-article col-sm-1">
        <%= link_to new_admin_article_path,
          class: "btn btn-primary btn-circle btn-xl" do %>
            <i class="glyphicon glyphicon-plus" title="New Aticle"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
